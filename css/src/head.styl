/* 
* Global header for every page and subpage
*/
header .navigation
	width 900px
	margin 0px auto
	color #FFF
	padding-top 25px
	text-transform uppercase

header .navigation .logo
	font-size 25px
	float right

header .navigation .logo span.prename
	color #323c66
	text-shadow 1px 1px 0px #658fb5

header .navigation .logo span.name
	color #658fb5
	text-shadow 1px 1px 0px #323c66

header .navigation nav
	float left
	font-family 'Exo', sans-serif

header .navigation nav a.active
	color #323c66

header .navigation nav a
	color #FFFFFF

header .navigation nav a:hover
	color #658fb5
	text-decoration none

header .navigation nav ul
	margin 2px 0px 0px 0px
	padding 0px
	list-style-type none
	font-size 13px

header .navigation nav ul li 
	float left
	margin-right 18px
	letter-spacing 1px


/*
* Header for home
*/
div.head
	width 100%
	height 494px
	background url( '../img/background.jpg' ) repeat-x transparent

div.head header
	width 100%
	height 67px
	background url( '../img/navigation_bg.png' ) repeat-x transparent

div.head header .main
	text-align center
	margin-top 70px

div.head header .main .name
	font-size 35px
	text-shadow 1px 1px 0px #666
	font-family 'Inika', serif

div.head header .main .slogan
	font-size 15px
	margin-top 30px
	text-shadow 1px 1px 0px #666
	letter-spacing 1.20px

div.head header .main .mac
	position relative
	top 45px
